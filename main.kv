#:import Label kivy.uix.label.Label
<Menu>:
    manager: screen_manager
    orientation: "vertical"
    ActionBar:
        pos_hint: {'top':1}
        ActionView:
            use_separator: True
            ActionPrevious:
                title: 'Example App'
                with_previous: False
            ActionGroup:
                text: 'File'
                mode: 'spinner'
                ActionButton:
                    text: 'Load'
                    on_release: root.show_load()
                ActionButton:
                    text:'Add Data'
                    on_release: root.manager.current = "help"
                ActionButton:
                    text:'Save File'
                    on_release: root.show_save()
                ActionButton:
                    text:'Save as png' 
                    on_release: root.show_plot() 
            ActionGroup:
                text: 'Edit'
                mode: 'spinner'
                ActionButton:
                    text:'Edit data'
                    on_release: app.root.manager.current = "edit"
    Manager:
        id: screen_manager

<LoadData>:
    BoxLayout:
        orientation: 'vertical'
        ScrollView:
            size_hint: (1, 1)
            do_scroll_x: True                                                      
            do_scroll_y: True         
            RecycleView:
                viewclass: 'Label'
                data: [{'text': str(x), 'color': (0, 0, 0, 1)} for x in root.data_items]
                SelectableRecycleGridLayout:
                    default_size: None, dp(26)
                    default_size_hint: 1, None
                    size_hint_y: None
                    cols: root.data_size
                    height: self.minimum_height
                    orientation: 'vertical'
                    multiselect: True
                    touch_multiselect: True 

<EditData>:
    BoxLayout:
        orientation: 'vertical'
        ScrollView:
            size_hint: (1, 1)
            do_scroll_x: True                                                      
            do_scroll_y: True         
            RecycleView:
                viewclass: 'SelectableButton'
                data: [{'text': str(x)} for x in root.data_items]
                SelectableRecycleGridLayout:
                    default_size: None, dp(26)
                    default_size_hint: 1, None
                    size_hint_y: None
                    cols: root.data_size
                    height: self.minimum_height
                    orientation: 'vertical'
                    multiselect: True
                    touch_multiselect: True 


<Help>:
    Label:
        text: "Load a file"
        color: 0, 0, 0, 1   # black color text

<Manager>:
    helpScreen: helpScreen
    loadData: loadData
    editData : editData
        
    Help:
        id: helpScreen
        name: 'help'
    
    LoadData:
        id: loadData
        name: 'load'

    EditData:
        id: editData
        name: 'edit'

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser
            filters: ['*.csv']
        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: 
                    app.root.load()
                    app.root.manager.loadData.show_data(filechooser.path, filechooser.selection)
                    app.root.manager.editData.show_data(filechooser.path, filechooser.selection)
                    app.root.manager.current = "load"

<SelectableButton>:
    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size

<TextInputPopup>:
    title: "Popup"
    size_hint: None, None
    size: 400, 400
    auto_dismiss: False

    BoxLayout:
        orientation: "vertical"
        TextInput:
            id: txtinput
            text: root.obj_text
        Button:
            size_hint: 1, 0.2
            text: "Save Changes"
            on_release:
                root.obj.update_changes(txtinput.text)
                root.dismiss()
        Button:
            size_hint: 1, 0.2
            text: "Cancel Changes"
            on_release: root.dismiss()

<SaveDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser
            on_selection: text_input.text = self.selection and self.selection[0] or ''
        Label:
            text_size: self.size
            size_hint_y: None
            text: "Filename:"
            multiline: False
            width: 20
        TextInput:
            id: text_input
            size_hint_y: None
            size_hint_x: 1
            height: 50
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text, app.root.manager.editData.data_items, app.root.manager.editData.data_size)


